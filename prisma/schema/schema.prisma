generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema", "prismaSchemaFolder"]
}

generator zod {
  provider       = "zod-prisma-types"
  output        = "../../node_modules/@prisma/client/zod"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["planucalgary", "catalog"]
}
